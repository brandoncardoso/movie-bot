    "nedb-promises": "^5.0.3",
    "node-schedule": "^2.1.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7.1.8",
    "@types/levenshtein": "^1.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.9",
